{
  "compilerOptions": {
    // TypeScript 编译目标版本
    "target": "es6", // 或者选择 "es5"、"es2017" 等
    "types": ["node"],
    // 指定模块系统（如 commonjs, esnext, umd 等）
    "module": "commonjs",

    // 是否为每个输出文件生成声明文件
    "declaration": true,

    // 声明文件输出目录
    "outDir": "./dist",

    // 是否允许编译过程中出现错误
    "noEmitOnError": true,

    // 启用严格模式进行类型检查
    "strict": true,

    // 其他可选选项，例如：
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {}
  },
  // 包含要编译的文件或排除某些文件
  "include": ["index.ts"], // 根据你的项目结构调整此项
  "exclude": ["node_modules", "**/*.spec.ts"] // 排除不需要编译的文件夹和测试文件等
}